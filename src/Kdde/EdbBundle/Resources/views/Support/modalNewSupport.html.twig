<div class="modal hide" id="modalNewSupport">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">x</button>
		<h3>Add New Support</h3>
	</div>
	<div class="modal-body">
		<p>
			<form class="form-horizontal">
				<fieldset>
					<div id="divSupportId" class="control-group">
						<label style="text-align: left" class="control-label">Id</label> 
						<div class="controls">
							<input id="inputSupportId" type="text" 
								onchange="$('#divSupportId').attr('class', 'control-group'); $('#errorValSupportId').html(null)">
							<p class="help-block" id="errorValSupportId"></p>
						</div>
					</div>
					<div id="divSupportDesc" class="control-group">
						<label style="text-align: left" class="control-label">Description</label> 
						<div class="controls">
							<input id="inputSupportDescription" type="text" 
								onchange="$('#divSupportDesc').attr('class', 'control-group'); $('#errorValSupportDesc').html(null)">
							<p class="help-block" id="errorValSupportDesc"></p>
						</div>
					</div>
					<div class="control-group">
	      				<div class="controls">
							<a class="btn btn-primary" id="addSupport">Add</a>
						</div>
					</div>
				</fieldset>
			</form>
		</p>
		
	</div>
	
	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal">Close</a>
	</div>
	
</div>