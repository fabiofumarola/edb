<div class="modal hide" id="modalNewOnomasticArea">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">x</button>
		<h3>Add New Onomastic Area</h3>
	</div>
	<div class="modal-body">
		<p>
			<form class="form-horizontal">
				<fieldset>
					<div id="divOnomasticAreaId" class="control-group">
						<label style="text-align: left" class="control-label">Id</label> 
						<div class="controls">
							<input id="inputOnomasticAreaId" type="text" 
								onchange="$('#divOnomasticAreaId').attr('class', 'control-group'); $('#errorValOnomasticAreaId').html(null)">
							<p class="help-block" id="errorValOnomasticAreaId"></p>
						</div>
					</div>
					<div id="divOnomasticAreaDesc" class="control-group">
						<label style="text-align: left" class="control-label">Description</label> 
						<div class="controls">
							<input id="inputOnomasticAreaDescription" type="text" 
								onchange="$('#divOnomasticAreaDesc').attr('class', 'control-group'); $('#errorValOnomasticAreaDesc').html(null)">
							<p class="help-block" id="errorValOnomasticAreaDesc"></p>
						</div>
					</div>
					<div class="control-group">
	      				<div class="controls">
							<a class="btn btn-primary" id="addOnomasticArea">Add</a>
						</div>
					</div>
				</fieldset>
			</form>
		</p>
		
	</div>
	
	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal">Close</a>
	</div>
	
</div>