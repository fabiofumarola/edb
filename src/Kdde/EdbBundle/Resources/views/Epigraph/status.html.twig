{% extends '::base_reduct.html.twig' %}

 {% block title %}
 EDB Home Page
{% endblock %}

{% block body %}

	<div class="marketing">
		<h2>List of Pending Epigraphes</h2>
		<br>
	</div>
<div class="row">
	<div>
		<table id="epiStatus" name="epiStatus" class="table table-striped table-bordered tablesorter">
			<thead>
				<tr>
					<th>ID</th>
					<th>N. ICVR</th>
					<th>SN</th>
					<th>Compilator</th>
					<th>Date</th>
					<th>Text</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for e in epigraphes %}
					<tr class="warning">
						<td> {{ e.id }}</td>	
						<td> {{ e.principalProgNumber }}</td>	
						<td> {{ e.subNumeration }}</td>	
						<td> {{ e.compilator.username }}</td>
						<td> {{ e.createdAt|date('Y-m-d')  }} </td>
						<td class = "span8"> {{ e.trascription | slice(0,80) }} 
						{% if e.trascription|length > 80 %}
    						...
						{% endif %}
						</td>						
						<td><a href="{{ path('edb_epigraph_edit', {'id': e.id}) }}" >Show/Edit</a></td>				
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
		
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/jquery.tablesorter.js') }}"></script>
    <script src="{{ asset('js/status.js') }}"></script>   	
{% endblock %}
