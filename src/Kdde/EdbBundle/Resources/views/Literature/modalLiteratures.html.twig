<div class="modal-large hide" id="viewLiteratureModal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">x</button>
		<h3>Bibliographic References</h3>		
		<br>
      		Type
      			<select name = "bibliography[type]" id="bibliography_type" class="span2" >
					<option value = "Rivista">Journal</option>
					<option value = "Convegno">Conference</option>
					<option value = "Monografia">Monograph</option>
					<option value = "Corpus">Corpus</option>
					<option value = "Repertorio">Repertory</option>
					<option value = "Volume">Volume</option>
				</select>	
			Note
				<input type = "text" class = "span2 offset10" id = "refNote"></input>
		
			Relationship
				<select class="span2" id="bibliography_resource_relation" name="bibliography[resource_relation]">
					<option value = "Identity">Identity</option>
					<option value = "Integration">Integration</option>
					<option value = "Opistographic">Opistographic</option>
					<option value = "Reuse">Reuse</option>
					<option value = "Other">Other</option>					
				</select>
	</div>
	<div class="modal-body">
		<p>

	<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th class="span2">Type</th>
					<th class="span2">Generated ID</th>
					<th class="span8">Reference</th>
					<th class="span1">Action</th>
				</tr>
			</thead>
			<tbody id = "tBodyReferences"></tbody>
		</table>
	</div>
	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal">Close</a>
	</div>
</div>