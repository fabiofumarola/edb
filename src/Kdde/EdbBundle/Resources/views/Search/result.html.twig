{% extends '::base.html.twig' %}

{% block header %}
	{{ parent() }}
	
	<!-- google maps v3 -->
	<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
	<style type="text/css">
  		#map_canvas { width:550px;height: 300px; margin-right: auto ;margin-left: auto ; }
	</style>
	<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=true" ></script>
{% endblock %}

 {% block title %}
 EDB Search Result Page
{% endblock %}

{% block body %}

{% include 'KddeEdbBundle:GeoPosition:modalViewGeoPosition.html.twig' %}

<div class="marketing">
	<h2>Search Results</h2>
	<h3>Got {{ count }} Inscription{% if count > 0 %}s{% endif %}</h3>
	<br>
</div>
<div class="row">
	<div class="offset2 table-striped">
	{% for e in pagination %}
		{# main element #}
		<div class="">
			<div class="row">
				<h3>Epigraph EDB{{ e.id }}</h3>
			</div>
			<div class="row">
				<table class="table table-striped table-condensed">
					<tr>
						<td><strong>Volume ICVR:</strong> <em>{{ e.icvr.volume }} </em></td>
						<td><strong>Principal Number:</strong> <em>{{ e.principalProgNumber }} </em></td>
						<td><strong>Sub Number:</strong> <em>{{ e.subNumeration }} </em></td>
					</tr>
					<tr>
						<td><strong>Reference Literature</strong></td>
						<td><em>{{ e.literatures | join(", ") }}</em></td>
						<td></td>
					</tr>
					<tr class="warning">
						<td><strong>Pertinence</strong></td>
						<td></td>
						<td></td>
					</tr>
					{% for c in e.pertinence %}
						<tr>
							<td><strong>Area:</strong> <em>{{ c.pertinenceArea.description }} </em></td>
							<td><strong>Context:</strong> <em>{{ c.context.description }} </em></td>
							<td><strong>In Situ:</strong> 
								<em>
								{% if c.inSitu == true %}
									<i class="icon-ok"></i>
								{% else %}
									<i class="icon-remove"></i>
								{% endif %}
								</em> 
							</td>
						</tr>
					{% endfor %}
					<tr >
						<td class="vertical-middle" ><strong>Geographic position:</strong> <em><span id="fld_geoPosition_{{ e.id }}" >{{ e.geoPosition }}</span></em></td>
						<td><a name="viewGeoPosition" value="{{ e.id }}" class="btn" title="View geographic position on map" >Show Map</a></td>
						<td></td>
					</tr>
					<tr class="warning">
						<td><strong>Conservation</strong></td>
						<td></td>
						<td><strong>Lost:</strong> 
								<em>
								{% if e.lost == 'S' %}
									<i class="icon-ok"></i>
								{% else %}
									<i class="icon-remove"></i>
								{% endif %}
								</em> 
							</td>
					</tr>
					{% for c in e.conservations %}
						<tr>
							<td></td>
							<td><strong>Context:</strong> <em>{{ c.conservationContext.description }} </em></td>
							<td></td>
			
						</tr>
					{% endfor %}
					<tr class="warning">
						<td></td>
						<td></td>
						<td></td>
					</tr>
					<tr>
						<td><strong>Support:</strong> <em>{{ e.material.support.description }} </em></td>
						<td><strong>Technique:</strong> <em>{{ e.material.technique.description }} </em></td>
						<td></td>	
					</tr>
					<tr>
						<td><strong>Metrical Text:</strong> <em>{{ e.metricText }} </em></td>
						<td><strong>Divergent Text:</strong> <em>{{ e.divergentText }} </em></td>
						<td><strong>Function:</strong> <em>{{ e.funzione.description }} </em></td>
					</tr>
					<tr>
						<td><strong>Dating:</strong></td>	
						{% if e.data != null %}
							<td><strong>from</strong> <em>{{ e.data.from }} </em></td>
							<td><strong>to</strong> <em>{{ e.data.to }} </em></td>	
						{% else %}
							<td><strong>from</strong> <em> n.d. </em></td>
							<td> <strong>to</strong> <em> n.d. </em></td>
						{%  endif %}
					</tr>
					<tr>
						<td><strong>Compilation Date:</strong> <em>{{ e.dataScheda }} </em></td>
						{% if e.compilator != null %}
							<td><strong>Compilator:</strong> <em>{{e.compilator.firstname}} {{ e.compilator.lastname }} </em></td>
						{% elseif  e.oldCompilator != null %}
							<td><strong>Compilator:</strong> <em>{{ e.oldCompilator }} </em></td>
						{% endif %}						
						<td><a href="http://pcas.xdams.net/pcas-web/scheda/fotografico/ICVR/{{ e.id }}/scheda.html" onclick="window.open(this.href);return false;">Link PCAS</a></td>
					</tr>
					<tr>
						<td colspan="3">
							<div class="hero-unit">
								<p class="lead" id="cardo">{{e.trascription}}</p>
							</div>
						</td>
					</tr>
					<tr class="error">
						<td></td>
						<td></td>
						<td></td>
					</tr>
				</table>
			</div>
		</div>
		<hr>
		{# end main element#}
	{% endfor %}
	<div class="pagination offset2">
		<ul>
    		{{ pagination.render() | raw }}
    	</ul>
	</div>
 </div>
</div>		
{% endblock %}
{% block javascripts %}
	
		{{ parent() }}
		
		 <script src="{{ asset('js/basic-result.js') }}" type="text/javascript"></script>
{% endblock %}
