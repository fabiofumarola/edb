<div class="modal hide" id="modalNewPaleography">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">x</button>
		<h3>Add New Paleography</h3>
	</div>
	<div class="modal-body">
		<p>
			<form class="form-horizontal">
				<fieldset>
					<div id="divPaleographyId" class="control-group">
						<label style="text-align: left" class="control-label">Id</label> 
						<div class="controls">
							<input id="inputPaleographyId" type="text" 
								onchange="$('#divPaleographyId').attr('class', 'control-group'); $('#errorValPaleographyId').html(null)">
							<p class="help-block" id="errorValPaleographyId"></p>
						</div>
					</div>
					<div id="divPaleographyDesc" class="control-group">
						<label style="text-align: left" class="control-label">Description</label> 
						<div class="controls">
							<input id="inputPaleographyDescription" type="text" 
								onchange="$('#divPaleographyDesc').attr('class', 'control-group'); $('#errorValPaleographyDesc').html(null)">
							<p class="help-block" id="errorValPaleographyDesc"></p>
						</div>
					</div>
					<div class="control-group">
	      				<div class="controls">
							<a class="btn btn-primary" id="addPaleography">Add</a>
						</div>
					</div>
				</fieldset>
			</form>
		</p>
		
	</div>
	
	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal">Close</a>
	</div>
	
</div>