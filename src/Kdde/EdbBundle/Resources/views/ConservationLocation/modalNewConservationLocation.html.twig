<div class="modal hide" id="modalNewConservationLocation">
	<div class="modal-header">
		{#<button type="button" class="close" data-dismiss="modal" onclick="$('#selectAreaPertinenza').val('0')">x</button>#}
		<button type="button" class="close" data-dismiss="modal">x</button>
		<h3>Add New Conservation City/Town</h3>
	</div>
	<div class="modal-body">
		<p>
			<form class="form-horizontal">
				<fieldset>
					<div id="divConservationLocation" class="control-group">
						<label style="text-align: left" class="control-label">Description</label> 
						<div class="controls">
							<input id="inputConservationLocationDescription" type="text" 
								onchange="$('#divConservationLocation').attr('class', 'control-group'); $('#errorValConservationLocation').html(null)">
							<p class="help-block" id="#errorValConservationLocation"></p>
						</div>
						<label style="text-align: left" class="control-label">ID Geonames</label> 
						<div class="controls">
							<input id="inputConservationLocationIDGeonames" type="text" 
								onchange="$('#divConservationLocation').attr('class', 'control-group'); $('#errorValConservationLocation').html(null)">
							<p class="help-block" id="#errorValConservationLocation"></p>
						</div>
						<label style="text-align: left" class="control-label">Country</label> 
						<div class="controls">
							<input id="inputConservationLocationCountry" type="text" value = "Italy"
								onchange="$('#divConservationLocation').attr('class', 'control-group'); $('#errorValConservationLocation').html(null)">
							<p class="help-block" id="#errorValConservationLocation"></p>
						</div>
						<label style="text-align: left" class="control-label">Country - ID Geonames</label> 
						<div class="controls">
							<input id="inputConservationLocationCountryIDGeonames" type="text" value = "3175395"
								onchange="$('#divConservationLocation').attr('class', 'control-group'); $('#errorValConservationLocation').html(null)">
							<p class="help-block" id="#errorValConservationLocation"></p>
						</div>
					</div>
					<div class="control-group">
	      				<div class="controls">
							<a class="btn btn-primary" id="addConservationLocation">Add</a>
						</div>
					</div>
				</fieldset>
			</form>
		</p>
		
	</div>
	
	<div class="modal-footer">
		{#<a href="#" class="btn" data-dismiss="modal" onclick="$('#selectAreaPertinenza').val('0')">Close</a>#}
		<a href="#" class="btn" data-dismiss="modal">Close</a>
	</div>
	
</div>